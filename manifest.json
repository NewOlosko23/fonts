{
    "manifest_version": 3,
    "name": "Font Saver",
    "version": "2.0",
    "description": "Professional font management: discover, save, organize fonts with tags, export/import collections, dark mode & more.",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Save Fonts"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}